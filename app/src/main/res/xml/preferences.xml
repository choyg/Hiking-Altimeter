<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <ListPreference
    android:key="pref_unitType"
    android:title="@string/pref_unitType"
    android:dialogTitle="@string/pref_unitType"
    android:entries="@array/unit_types"
    android:entryValues="@array/unit_values"
    android:summary="%s"
    android:defaultValue="0" />
    <ListPreference
        android:key="pref_decimal_places"
        android:title="@string/pref_decimal_places"
        android:dialogTitle="@string/pref_decimal_places"
        android:entries="@array/floating_types"
        android:entryValues="@array/floating_values"
        android:summary="%s"
        android:defaultValue="%.0f" />
</PreferenceScreen>
<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <ListPreference
        android:defaultValue="m"
        android:dialogTitle="@string/pref_unitType"
        android:entries="@array/unit_types"
        android:entryValues="@array/unit_type_values"
        android:key="PREF_UNITS"
        android:summary="%s"
        android:title="@string/pref_unitType" />
    <ListPreference
        android:defaultValue="0"
        android:dialogTitle="@string/pref_decimal_places"
        android:entries="@array/floating_types"
        android:entryValues="@array/floating_values"
        android:key="PREF_DECIMALS"
        android:summary="%s"
        android:title="@string/pref_decimal_places" />
    <Preference
        android:key="@string/pref_reset"
        android:title="@string/pref_reset" />
</PreferenceScreen>
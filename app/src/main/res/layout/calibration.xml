<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/textLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:paddingStart="30dp"
            android:textColor="@color/textColor"
            android:textSize="48sp"
            tools:ignore="RtlSymmetry"
            tools:text="00000mi" />

        <View
            android:id="@+id/distDivider"
            android:layout_width="fill_parent"
            android:layout_height="1sp"
            android:layout_below="@id/distance"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/darker_gray"
            tools:ignore="SmallSp" />

        <ImageButton
            android:id="@+id/removeButton"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/distDivider"
            android:layout_alignParentEnd="true"
            android:contentDescription="@string/remove_button"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_action_remove" />

    </RelativeLayout>


    <Button
        android:id="@+id/calibrationButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="?android:attr/selectableItemBackground"
        android:text="@string/calibration_button"

        />

    <View
        android:id="@+id/divider"
        android:layout_width="wrap_content"
        android:layout_height="1sp"
        android:layout_above="@id/calibrationButton"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorPrimary"
        tools:ignore="SmallSp" />

    <LinearLayout
        android:id="@+id/TSpecial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/divider">

        <Button
            android:id="@+id/filler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="33"
            android:background="?android:attr/selectableItemBackground"
            android:paddingStart="15dp"
            android:text="0"
            android:textSize="48sp"
            android:typeface="monospace"
            android:visibility="invisible"
            tools:ignore="HardcodedText,RtlSymmetry" />

        <Button
            android:id="@+id/zero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="33"
            android:background="?android:attr/selectableItemBackground"
            android:text="0"
            android:textSize="48sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/decimal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="33"
            android:background="?android:attr/selectableItemBackground"

            android:paddingEnd="15dp"
            android:text="."
            android:textSize="48sp"
            tools:ignore="HardcodedText,RtlSymmetry" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/T789"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/TSpecial">

        <Button
            android:id="@+id/seven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="33"
            android:background="?android:attr/selectableItemBackground"
            android:paddingStart="15dp"
            android:text="7"
            android:textSize="48sp"
            tools:ignore="HardcodedText,RtlSymmetry" />

        <Button
            android:id="@+id/eight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="33"
            android:background="?android:attr/selectableItemBackground"
            android:text="8"
            android:textSize="48sp"
            tools:ignore="HardcodedText,RtlSymmetry" />

        <Button
            android:id="@+id/nine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="33"
            android:background="?android:attr/selectableItemBackground"
            android:paddingEnd="15dp"
            android:text="9"
            android:textSize="48sp"
            tools:ignore="HardcodedText,RtlSymmetry" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/T456"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/T789">

        <Button
            android:id="@+id/four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="33"
            android:background="?android:attr/selectableItemBackground"
            android:paddingStart="15dp"
            android:text="4"
            android:textSize="48sp"
            tools:ignore="HardcodedText,RtlSymmetry" />

        <Button
            android:id="@+id/five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="33"
            android:background="?android:attr/selectableItemBackground"
            android:text="5"
            android:textSize="48sp"
            tools:ignore="HardcodedText,RtlSymmetry" />

        <Button
            android:id="@+id/six"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="33"
            android:background="?android:attr/selectableItemBackground"
            android:paddingEnd="15dp"
            android:text="6"
            android:textSize="48sp"
            tools:ignore="HardcodedText,RtlSymmetry" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/T123"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/T456">

        <Button
            android:id="@+id/one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="33"
            android:background="?android:attr/selectableItemBackground"
            android:paddingStart="15dp"
            android:text="1"
            android:textSize="48sp"
            tools:ignore="HardcodedText,RtlSymmetry" />

        <Button
            android:id="@+id/two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="33"
            android:background="?android:attr/selectableItemBackground"
            android:text="2"
            android:textSize="48sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="33"
            android:background="?android:attr/selectableItemBackground"
            android:paddingEnd="15dp"
            android:text="3"
            android:textSize="48sp"
            tools:ignore="HardcodedText,RtlSymmetry" />

    </LinearLayout>

</RelativeLayout>